{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      
      "identifier": "tome:frost_blast",
      "category": "Items"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.spells_3"
      },
      "minecraft:max_stack_size": 1,
      "minecraft:foil": false,
      "minecraft:hand_equipped": false,
			"minecraft:durability": {
				"max_durability": 400,
				"damage_chance": {
					"min": 0,
					"max": 0
				}
			},
    	"minecraft:repairable": {
    		"repair_items": [
    			{
    				"items": ["minecraft:amethyst_shard", "minecraft:ink_sac"],
    				"repair_amount": 2
    			}
    		]
    	},
      "minecraft:icon":{
         "texture": "spell_2"
      },
      "minecraft:display_name": {
         "value":"§bFrost Blast\n§bHydromancy| |§aAcolyte§r"
      },
      "minecraft:cooldown":{
          "category":"frost_blast",
          "duration": 3
      },
      
      "minecraft:on_use": {
      "on_use": {
          "event": "frost_blast",
          "target": "self"
          }
        }
      },
      "events": {
         "frost_blast": {
				      "sequence": [
             {
            "condition":"query.scoreboard('block_magic') == 0 && query.player_level >= 37 && query.remaining_durability > 1",
            "shoot": {
              "projectile": "tome:frost_blast",
              "launch_power": 3.3,
              "angle_offset": 0.5
              },
            "run_command": {
                "command": [
                "playsound random.glass @a[r=5] ~~~ 7"
                ],
                "target": "holder"
              },
              "damage": {
        			"type": "none",
        			"amount": 1,
        			"target": "self"
        		   }
             },
            {
            "condition": "query.scoreboard('block_magic') == 1 && query.remaining_durability >= 0",
        "run_command": {
            "command": [
            "tellraw @s {\"rawtext\":[{\"text\":\"§8The Tome's power is being blocked by an unknown force.\"}]}"
            ],
            "target": "holder"
              }
            },
            {
               "condition": "query.player_level < 37",
               "run_command": {
                 "command": ["tellraw @s {\"rawtext\":[{\"text\":\"§aYour Experience Level must be at level [37] before you can use this Tome.\"}]}"],
                 "target": "holder"
               }
            },
            {
               "condition": "!query.scoreboard('water') == 1",
               "run_command": {
                 "command": ["tellraw @s {\"rawtext\":[{\"text\":\"§1You do not have the required Knowledge to use this Tome.§r\"}]}"],
                 "target": "holder"
               }
            },
            {
            "condition": "query.scoreboard('block_magic') == 0 && query.player_level >= 37 && query.remaining_durability <= 1",
        "run_command": {
            "command": [
            "tellraw @s {\"rawtext\":[{\"text\":\"§8Your Tome crumbles before your eyes.\"}]}"
            ],
            "target": "holder"
               },
          		"damage": {
          			"type": "none",
          			"amount": 15,
          			"target": "self"
          		  }
             },
              {
                "condition": "query.scoreboard('block_magic') == 0 && query.player_level >= 37 && query.remaining_durability > 1",
                "randomize": [
                  {
                    "weight": 35,
                    "run_command": {
                      "command": [
                        "xp 32 @s"
                      ],
                    "target": "holder"
                    }
                  },
                  {
                    "weight": 65
                  }
                ]
              }
           ]
         }
      }
    }
  }